{
    "manifest_version": 3,
    "name": "Assistance",
    "version": "1.0.0", 
    "permissions": [
        "tabs",
        "scripting"
    ],
    "action": {
        "default_popup": "guide.html"
    },
    "content_scripts": [
        {
            "matches": ["https://trade.loginandtrade.com/webtrader/*"],
            "js": [
                "Shortcut/Shortcut.js",
                
                "CONFIG/config.js","CONFIG/cache.js",
                
                "src/Navigation.js", "src/RewriteHTML.js",
                         "src/scraper.js",
                         "src/Button.js", "src/KeyEvent.js",


                "html/popup.js",
                
                "index.js"
            ],
            "css": ["css/main.css"]
        }
    ]
}